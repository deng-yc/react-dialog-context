{
    "compileOnSave": true,
    "buildOnSave": true,
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2019",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": true,
        "importHelpers": false,
        "declaration": true,
        "declarationDir": "./packages",
        "outDir": "./packages",
        "rootDir": "./src",
        "baseUrl": "./src",
        "jsx": "react",
        "lib": ["es2015.promise", "es5", "dom"]
    },
    "exclude": ["node_modules", "packages"]
}
